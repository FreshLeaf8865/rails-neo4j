<div class="panel panel-default">
  <div class="panel-heading">
    <h1>
      <%= @movie.title %>
      <br>
      <small>Score: <%= @movie.score %></small>
    </h1>
  </div>

  <div class="panel-body lead">
    <%= @movie.review %>
  </div>

  <div class="panel-footer">
    <h3>Comments</h3>

    <table class="table">
      <% @movie.comments.each do |comment| %>
          <tr>
            <td>
              <%= comment.title %>
            </td>

            <td class="text-right">
              <%= link_to 'Destroy', [@movie, comment], method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
      <% end %>
    </table>

    <div class="row">
      <p class="col-md-6 text-left">
        <% if user_signed_in? %>
        <%= link_to 'Edit Movie', edit_movie_path(@movie), class: 'btn btn-info' %>
        <% end %>
        <%= link_to 'Back', movies_path, class: 'btn btn-default' %>
      </p>

      <p class="col-md-6 text-right">

        <% if user_signed_in? %>
        <%= link_to 'New Comment', new_movie_comment_path(@movie), class: 'btn btn-primary' %>
        <% end %>
      </p>
    </div>
  </div>
</div>